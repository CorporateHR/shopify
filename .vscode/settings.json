{
    "css.validate": false,
    "tailwindCSS.validate": true,
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "on",
        "other": "on"
    },
    "tailwindCSS.experimental.classRegex": [
        ["clsx\\(([^)]*)\\)", "(?:'|\")([^\"']*)(?:'|\")"],
        ["classnames\\(([^)]*)\\)", "(?:'|\")([^\"']*)(?:'|\")"],
        ["@apply\\s+([^;]*);", "(?:'|\")([^'\"]*)(?:'|\")"]
    ]
}
